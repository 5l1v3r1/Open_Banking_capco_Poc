#transfer-type {
    box-shadow: none;
    
    mat-card {
      padding:0px;
      box-shadow: none;
    }

    ::ng-deep .mat-grid-list {
      padding-bottom: calc(((80% - 0px) * 1) + 0px) !important;
      .mat-grid-tile {
        border: 1px solid #e4e6e5 !important;
        padding-top: calc(((80% - 0px) * 1) + 0px) !important;
        .mat-figure {
          height: 90% !important;
        }
      }
    }

    .transfer-way {
      position: absolute;
      background: #fff;
      //background-color: #eee;
      border: 1px solid #e4e6e5;
      height: 100px;
    }
    
    .fund-transfer-bottom-text {
      font-family: Roboto;
      font-size: 14px;
      color: #999;
      position: absolute;
      top: 60%;
    }
    
    .select-fund {
        background-color: #716dff;
        .fund-transfer-bottom-text  {
          color: #fff;
        }
    }

  }
  
  .ob-proceed-button {
    padding: 0px 30px !important;
    color: #716dff;
    border: 1px solid #716dff;
    background: #fff;
    border-radius: 5px;
  }